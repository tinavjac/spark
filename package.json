{
  "name": "spark",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "postinstall": "patch-package",
    "clean": "rm -rf node_modules package-lock-json ios android && yarn install",
    "format": "prettier --config .prettierrc.json src/**/*.{ts,tsx} --write",
    "lint": "expo lint",
    "fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "prebuild": "EXPO_NO_DOTENV=1 dotenvx run -f .env.development -- npx expo prebuild",
    "prebuild:prod": "EXPO_NO_DOTENV=1 dotenvx run -f .env.production -- npx expo prebuild",
    "start": "EXPO_NO_DOTENV=1 dotenvx run -f .env.development -- expo start -c --dev-client",
    "start:prod": "EXPO_NO_DOTENV=1 dotenvx run -f .env.production -- expo start -c --dev-client",
    "device": "EXPO_NO_DOTENV=1 dotenvx run -f .env.development -- expo run:ios --device",
    "device:prod": "EXPO_NO_DOTENV=1 dotenvx run -f .env.production -- expo run:ios --device",
    "ios": "EXPO_NO_DOTENV=1 dotenvx run -f .env.development -- expo run:ios",
    "ios:prod": "EXPO_NO_DOTENV=1 dotenvx run -f .env.production -- expo run:ios",
    "android": "EXPO_NO_DOTENV=1 dotenvx run -f .env.development -- expo run:android",
    "android:prod": "EXPO_NO_DOTENV=1 dotenvx run -f .env.production -- expo run:android",
    "build:ios": "dotenvx run -f .env.development -- npx eas build --platform ios --local",
    "build:ios:prod": "dotenvx run -f .env.production -- npx eas build --platform ios --local",
    "build:android": "dotenvx run -f .env.development -- npx eas build --platform android --local",
    "build:android:prod": "dotenvx run -f .env.production -- npx eas build --platform android --local"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^5.1.2",
    "@shopify/flash-list": "^1.8.0",
    "@tanstack/react-query": "^5.71.10",
    "axios": "^1.8.4",
    "clsx": "^2.1.1",
    "expo": "^52.0.16",
    "expo-constants": "~17.0.3",
    "expo-dev-client": "^5.0.20",
    "expo-device": "^7.0.3",
    "expo-font": "^13.0.4",
    "expo-image": "^2.0.7",
    "expo-linking": "~7.0.3",
    "expo-notifications": "^0.29.14",
    "expo-router": "~4.0.11",
    "expo-splash-screen": "~0.29.13",
    "expo-status-bar": "~2.0.0",
    "expo-system-ui": "^4.0.9",
    "nativewind": "^4.1.23",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "^0.76.9",
    "react-native-css-interop": "^0.1.22",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-mmkv": "^3.2.0",
    "react-native-reanimated": "~3.16.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.1.0",
    "react-native-svg": "^15.11.2",
    "react-native-toast-message": "^2.2.1",
    "react-native-web": "~0.19.10",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.3.12",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react-native-svg-transformer": "^1.5.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
